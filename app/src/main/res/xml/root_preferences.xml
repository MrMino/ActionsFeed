<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/github_header">

        <EditTextPreference
            app:key="token"
            app:title="@string/token_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="repository"
            app:title="Repository (format @owner/@repo)" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Look and feel">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_dark_theme"
            android:title="Dark theme" />
    </PreferenceCategory>

</PreferenceScreen>